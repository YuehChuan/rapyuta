<!--html-->

<launch>

  <arg name="use_rviz" default="false" />

  <include file="$(find robot_basic)/launch/robot_basic.launch" />

  <node name="calculat_navigation_cmd" pkg="navigation_controller"  type="navigation_controller" output="screen">
    <remap from="cmd_vel" to="raw_cmd_vel"/>
  </node>

  <node name="guide_control" pkg="guide_control"  type="guide_control" output="screen">
    <remap from="people" to="rear_people"/>
  </node>

  <node name="send_navigation_cmd" pkg="navigation_controller" type="command_pub_srv_gui" output="screen"/>

  <node name="icard" pkg="icread" type="mypcsc_node"/>

  <node name="mysql" pkg="mysql" type="mysql_update_final"/>

  <node name="schedule1" pkg="mysql" type="schedule_mul"/>

  <node name="schedule2" pkg="mysql" type="schedule_mul_arrange" />

  <!-- leg detector node -->
  <param name="/leg_detector/connection_threshold " value="0.03" type="double"/>
  <param name="/leg_detector/leg_reliability_limit" value="0.45" type="double"/>
  <param name="/leg_detector/min_points_per_group " value="15" type="int"/>
  <param name="/leg_detector/fixed_frame" value="laser" type="string"/>
  <node name="leg_detector" pkg="leg_detector" type="leg_detector" args="$(find leg_detector)/config/trained_leg_detector.yaml">  
    <remap from="scan" to="scan" />
    <remap from="leg_tracker_measurements" to="leg_tracker_measurements" />
    <remap from="people_tracker_measurements" to="people_tracker_measurements" />
    <remap from="visualization_marker" to="visualization_marker" />
  </node>
  <node name="velocity_tracker" pkg="people_velocity_tracker" type="tracker.py" respawn="true">
    <remap from="people_tracker_measurements" to="people_tracker_measurements" />
    <remap from="people" to="people" />
    <remap from="visualization_marker" to="visualization_marker" />
  </node>

  <param name="/leg_detector_rear/connection_threshold " value="0.03" type="double"/>
  <param name="/leg_detector_rear/leg_reliability_limit" value="0.45" type="double"/>
  <param name="/leg_detector_rear/min_points_per_group" value="15" type="int"/>
  <param name="/leg_detector_rear/fixed_frame" value="rear_laser" type="string"/>  
  <node name="leg_detector_rear" pkg="leg_detector" type="leg_detector" args="$(find leg_detector)/config/trained_leg_detector.yaml">
    <remap from="scan" to="rear_scan" />
    <remap from="leg_tracker_measurements" to="rear_leg_tracker_measurements" />
    <remap from="people_tracker_measurements" to="rear_people_tracker_measurements" />
    <remap from="visualization_marker" to="rear_visualization_marker" />
  </node>
  <node name="rear_velocity_tracker" pkg="people_velocity_tracker" type="tracker.py" respawn="true">
    <remap from="people_tracker_measurements" to="rear_people_tracker_measurements" />
    <remap from="people" to="rear_people" />
    <remap from="visualization_marker" to="rear_visualization_marker" />
  </node>

  <!-- map server node -->
  <node pkg="map_server" type="map_server" name="map_server" args="$(find navigation_controller)/map/map.yaml"/>

  <!-- amcl node -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <remap from="scan" to="scan"/>
    <!-- Publish scans from best pose at a max of 10 Hz -->
    <param name="use_map_topic" value="true"/>
    <param name="odom_model_type" value="omni"/>
    <param name="odom_alpha5" value="0.1"/>
    <param name="transform_tolerance" value="0.5" />
    <param name="gui_publish_rate" value="10.0"/>
    <param name="laser_max_beams" value="300"/>
    <param name="min_particles" value="500"/>
    <param name="max_particles" value="5000"/>
    <param name="kld_err" value="0.1"/>
    <param name="kld_z" value="0.99"/>
    <param name="odom_alpha1" value="0.1"/>
    <param name="odom_alpha2" value="0.1"/>
    <!-- translation std dev, m -->
    <param name="odom_alpha3" value="0.1"/>
    <param name="odom_alpha4" value="0.1"/>
    <param name="laser_z_hit" value="0.9"/>
    <param name="laser_z_short" value="0.05"/>
    <param name="laser_z_max" value="0.05"/>
    <param name="laser_z_rand" value="0.5"/>
    <param name="laser_sigma_hit" value="0.2"/>
    <param name="laser_lambda_short" value="0.1"/>
    <param name="laser_lambda_short" value="0.1"/>
    <param name="laser_model_type" value="likelihood_field"/>
    <!-- <param name="laser_model_type" value="beam"/> -->
    <param name="laser_min_range" value="1"/>
    <param name="laser_max_range" value="5"/>
    <param name="laser_likelihood_max_dist" value="2.0"/>
    <param name="update_min_d" value="0.2"/>
    <param name="update_min_a" value="0.5"/>
    <param name="resample_interval" value="1"/>
    <param name="transform_tolerance" value="0.1"/>
    <param name="recovery_alpha_slow" value="0.0"/>
    <param name="recovery_alpha_fast" value="0.0"/>
  </node>

  <node name="tf_world_to_map" pkg="tf" type="static_transform_publisher"
      args="0 0 0 0 0 0 world map 10" />

  <node name="rviz" pkg="rviz" type="rviz" if="$(arg use_rviz)" required="$(arg use_rviz)"
      args="-d $(find navigation_controller)/configuration_files/iccard.rviz" />

</launch>
